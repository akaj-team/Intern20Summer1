<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgImagePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:srcCompat="@drawable/cat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imgIsLiked"
            android:layout_width="38sp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="10dp"
            tools:srcCompat="@drawable/ic_heart" />

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_comment" />

        <ImageView
            android:id="@+id/imgShare"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_marginHorizontal="10dp"
            android:padding="1dp"
            app:srcCompat="@drawable/ic_share" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLikes"
                android:layout_width="17sp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_heart_filled" />

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="12" />

            <TextView
                android:id="@+id/tvLikeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="likes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:text="saybayaaa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                tools:text="saybayaaa aksdnkas lakndsnad kansdkjna aksdnkasd akjsdn aksndasndaskdn" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />
</LinearLayout>