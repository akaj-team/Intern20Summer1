<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collapsing_toolbar_layout_w7_height"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorCollapsingToolbarLayoutW7ContentScriom"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgDisplayPlantDetail"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_view_display_plant_detail_w7_height"
                android:layout_marginTop="@dimen/image_view_display_plant_detail_w7_margin_top"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/img_cat" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_fragment_plant_detail_w7_height"
                android:background="@color/colorToolbarFragmentPlantDetailW7Background"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <ImageView
                    android:id="@+id/imgBackPlantDetail"
                    android:layout_width="@dimen/image_view_back_plant_detail_w7_size"
                    android:layout_height="@dimen/image_view_back_plant_detail_w7_size"
                    android:layout_marginLeft="@dimen/image_view_back_plant_detail_w7_margin_left"
                    android:src="@drawable/ic_arrow_back_ios_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_toolbar_title_fragment_plant_detail_w7_margin_left"
                    android:text="@string/text_view_toolbar_title_fragment_plant_detail_w7_text"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_view_toolbar_title_text_size" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewFragmentPlantDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/linear_layout_main_content_w7_margin_bottom"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlantMainDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_view_plant_main_description_w7_margin_top"
                android:textColor="@color/colorTextViewPlantMainDescriptionW7Text"
                android:textSize="@dimen/text_view_plant_main_description_w7_text_size"
                tools:text="Cây bị sâu" />

            <LinearLayout
                android:id="@+id/llPlantAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_plant_at_w7_margin_top"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPlantAtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_plant_at_description_w7_text"
                    android:textSize="@dimen/text_view_plant_at_description_w7_text_size" />

                <TextView
                    android:id="@+id/tvPlantAtDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_plant_at_description_w7_text_size"
                    tools:text="05/08/2020 12h01" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLastWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLastWaterDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_last_watering_description_w7_text"
                    android:textSize="@dimen/text_view_plant_at_description_w7_text_size" />

                <TextView
                    android:id="@+id/tvLastWaterDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_plant_at_description_w7_text_size"
                    tools:text="08/08/2020 16h01" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_view_plant_description_w7_margin_top"
                android:text="@string/text_view_plant_description_w7_text"
                android:textSize="@dimen/text_view_plant_main_description_w7_text_size" />

            <TextView
                android:id="@+id/tvPlantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/text_view_plant_description_w7_margin_horizontal"
                android:justificationMode="inter_word"
                android:textSize="@dimen/text_view_plant_at_description_w7_text_size"
                tools:targetApi="o"
                tools:text="This is plant description, this is plant description, is plant description  " />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rlButtonsFragmentPlantDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlantWatering"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_plant_watering_w7_height"
                android:layout_marginHorizontal="@dimen/button_plant_watering_w7_margin_horizontal"
                android:layout_marginVertical="@dimen/button_plant_watering_w7_margin_vertical"
                android:background="@drawable/bg_button_plant_watering_w7"
                android:text="@string/button_plant_watering_w7_text"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_plant_watering_w7_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlantCutOff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_plant_cut_off_w7_height"
                android:layout_marginHorizontal="@dimen/button_plant_cut_off_w7_margin_horizontal"
                android:layout_marginBottom="@dimen/button_plant_cut_off_w7_margin_bottom"
                android:background="@drawable/bg_button_cut_off_enable_w7"
                android:text="@string/button_plant_cut_off_w7_text"
                android:textColor="@color/colorButtonNextRegisterDisableWeek7Text"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlNoLongerExistPlant"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgNoLongerExistPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_empty_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNoLongerExistPlant"
            android:layout_centerHorizontal="true"
            android:text="@string/text_view_plant_is_no_longer_exist_description_w7_text" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
