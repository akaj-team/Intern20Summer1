<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayoutFragmentTimeLineW10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarActivityTimeLineW10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_toolbar_w10"
                android:paddingHorizontal="@dimen/toolbar_fragment_time_line_w10_padding_horizontal">

                <ImageView
                    android:layout_width="@dimen/image_view_hamburger_w10_size"
                    android:layout_height="@dimen/image_view_hamburger_w10_size"
                    android:src="@drawable/ic_hamburger" />

                <TextView
                    android:id="@+id/text_view_fragment_time_line_title_w10"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="Long Phan" />

                <ImageView
                    android:id="@+id/imgCreateNewPostW10"
                    android:layout_width="@dimen/image_view_hamburger_w10_size"
                    android:layout_height="@dimen/image_view_hamburger_w10_size"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_add_16" />
            </androidx.appcompat.widget.Toolbar>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeContainerW10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/toolbarActivityTimeLineW10">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleViewTimeLineW10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBarW10"
        android:layout_width="@dimen/progress_bar_width_W5"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
</RelativeLayout>
