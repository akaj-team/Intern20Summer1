<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/container_progress_dialog_loading_margin"
    android:gravity="center"
    android:padding="@dimen/container_progress_dialog_loading_padding">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_progress_dialog_loading_text"
        android:textColor="#FF9800"
        android:textSize="@dimen/text_view_progress_dialog_loading_text_size" />
</LinearLayout>
