<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarFragmentNewPostW10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9800"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/imgBackNewPost"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_back_ios_20" />

        <TextView
            android:id="@+id/tvTitleFragmentNewPostW10"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_view_new_post_toolbar_title_w10" />

        <Button
            android:id="@+id/btnPostW10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_post_unable"
            android:enabled="false"
            android:text="@string/button_post_w10"
            android:textAllCaps="false"
            android:textColor="@color/colorLoginButtonText"
            android:textSize="16sp"
            android:layout_gravity="right" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgUploadImagePostW10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_black_border_1px"
            android:src="@drawable/ic_add_photo_50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/text_view_content_description_w10"
            android:textColor="#FF9800"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtContentPostW10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:maxLength="500"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
