<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.asiantech.intern20summer1.week7.fragment.PlantNewDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_plant_new_dialog_w7_height"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/card_view_plant_new_dialog_w7_margin_horizontal"
        app:cardCornerRadius="@dimen/card_view_plant_new_dialog_w7_corner_radius"
        app:cardElevation="@dimen/card_view_plant_new_dialog_w7_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_plant_new_dialog_w7_height">

            <ImageView
                android:id="@+id/imgCloseDialog"
                android:layout_width="@dimen/image_view_close_dialog_w7_size"
                android:layout_height="@dimen/image_view_close_dialog_w7_size"
                android:layout_margin="@dimen/image_view_close_dialog_margin"
                android:background="@drawable/ic_close_20" />

            <TextView
                android:id="@+id/tvTitleDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/text_view_plant_new_title_dialog_w7_margin_top"
                android:layout_marginBottom="@dimen/text_view_plant_new_title_dialog_w7_margin_bottom"
                android:text="@string/text_view_plant_new_title_dialog_w7_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_view_plant_new_title_dialog_w7_text_size" />

            <com.asiantech.intern20summer1.week7.other.CustomSpinner
                style="@style/SpinnerWithNoArrow"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_w7_height"
                android:layout_below="@id/tvTitleDialog"
                android:layout_marginHorizontal="@dimen/spinner_w7_margin_horizontal"
                android:padding="10dp"
                android:dropDownVerticalOffset="@dimen/spinner_w7_drop_down_vertical_offset"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/imgIconSpinner"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@+id/tvTitleDialog"
                android:layout_alignEnd="@+id/spinner"
                android:layout_alignRight="@+id/spinner"
                android:background="@drawable/ic_arrow_back_ios_20"
                android:rotation="180"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp" />

            <Button
                android:id="@+id/btnOkPlantNewWeek7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_ok_plant_new_w7_height"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/button_ok_plant_new_w7_margin_horizontal"
                android:layout_marginBottom="@dimen/button_ok_plant_new_w7_margin_bottom"
                android:background="@drawable/bg_button_next_register_disable_w7"
                android:enabled="false"
                android:text="@string/button_ok_plant_new_w7_text"
                android:textColor="@color/colorButtonNextRegisterDisableWeek7Text"
                android:textSize="@dimen/button_ok_plant_new_w7_text_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
