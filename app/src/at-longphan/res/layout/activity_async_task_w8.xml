<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/container_activity_async_task_w8">

    <TextView
        android:id="@+id/tvDownloadedPercentW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_view_download_percent_w8_margin_top"
        android:text="@string/text_view_download_percent_w8_text"
        android:textSize="@dimen/text_view_download_percent_w8_text_size"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvPercentW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_download_percent_w8_margin_top"
        android:layout_toRightOf="@id/tvDownloadedPercentW8"
        android:text="@string/text_view_percent_w8_text"
        android:textSize="@dimen/text_view_download_percent_w8_text_size"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBarW8"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDownloadedPercentW8"
        android:layout_marginTop="@dimen/progress_bar_w8_margin_top" />

    <EditText
        android:id="@+id/edtImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarW8"
        android:layout_marginTop="@dimen/edit_text_image_url_w8_margin_top"
        android:hint="@string/edit_text_put_link_image_here_w8_hint"
        android:singleLine="true"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDownloadImageW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtImageUrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_download_image_w8_margin_top"
        android:text="@string/button_download_image_w8_text" />
</RelativeLayout>
