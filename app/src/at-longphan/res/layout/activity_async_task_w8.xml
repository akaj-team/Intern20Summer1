<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDownloadedPercentW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvPercentW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tvDownloadedPercentW8"
        android:text="%"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:ignore="RtlHardcoded" />

    <ProgressBar
        android:id="@+id/progressBarW8"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDownloadedPercentW8"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/edtImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarW8"
        android:layout_marginTop="20dp"
        android:hint="@string/edit_text_put_link_image_here_w8_hint"
        android:importantForAutofill="no"
        android:singleLine="true"
        android:textStyle="bold"
        tools:ignore="LabelFor,TextFields" />

    <Button
        android:id="@+id/btnDownloadImageW8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtImageUrl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Download" />
</RelativeLayout>
