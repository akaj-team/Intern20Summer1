<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/llChild"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/container_padding_left"
            android:paddingRight="@dimen/container_padding_right">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/imageView_logo_margin_top"
                android:layout_marginBottom="@dimen/imageView_logo_margin_bottom"
                app:srcCompat="@drawable/img_logo" />

            <TextView
                android:id="@+id/tvEmailId"
                style="@style/TextViewDescription"
                android:text="@string/textView_email_id_description" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtEmailId"
                    style="@style/EditTextSignUpDescription"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:id="@+id/imgCheckEmailId"
                    style="@style/ImageViewCheck"
                    android:layout_width="@dimen/imageView_check_width"
                    android:layout_height="@dimen/imageView_check_height"
                    android:layout_alignTop="@+id/edtEmailId"
                    android:layout_alignRight="@+id/edtEmailId"
                    android:layout_alignBottom="@+id/edtEmailId"
                    app:srcCompat="@drawable/icon_tick" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPassword"
                style="@style/TextViewDescription"
                android:text="@string/textView_password_description" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtPassword"
                    style="@style/EditTextSignUpDescription"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/imgCheckPassword"
                    style="@style/ImageViewCheck"
                    android:layout_width="@dimen/imageView_check_width"
                    android:layout_height="@dimen/imageView_check_height"
                    android:layout_alignTop="@+id/edtPassword"
                    android:layout_alignRight="@+id/edtPassword"
                    android:layout_alignBottom="@+id/edtPassword"
                    app:srcCompat="@drawable/icon_tick" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvRetypePassword"
                style="@style/TextViewDescription"
                android:text="@string/textView_retype_password_description" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtRetypePassword"
                    style="@style/EditTextSignUpDescription"
                    android:inputType="textPassword" />

                <ImageView
                    android:id="@+id/imgCheckRetypePassword"
                    style="@style/ImageViewCheck"
                    android:layout_width="@dimen/imageView_check_width"
                    android:layout_height="@dimen/imageView_check_height"
                    android:layout_alignTop="@+id/edtRetypePassword"
                    android:layout_alignRight="@+id/edtRetypePassword"
                    android:layout_alignBottom="@+id/edtRetypePassword"
                    app:srcCompat="@drawable/icon_tick" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textView_social_media_margin_top"
                android:text="@string/textView_social_media_description"
                android:textSize="@dimen/textView_social_media_text_size" />

            <LinearLayout
                android:id="@+id/llSocialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linearLayout_social_media_margin_top"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtnFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/imageButton_social_margin_right"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_facebook" />

                <ImageButton
                    android:id="@+id/imgBtnTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/imageButton_social_margin_left"
                    android:layout_marginRight="@dimen/imageButton_social_margin_right"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/btn_twitter" />

                <ImageButton
                    android:id="@+id/imgBtnGooglePlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/imageButton_social_margin_left"
                    android:background="@drawable/btn_google_plus"
                    app:srcCompat="@drawable/btn_google_plus" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSignUp"
                style="@style/TextViewDescription"
                android:layout_marginTop="@dimen/button_sign_up_margin_top"
                android:background="@drawable/custom_btn"
                android:text="@string/button_sign_up"
                android:textColor="@color/colorTextBtnSignUp"
                android:textSize="@dimen/button_sign_up_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNotRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_sign_up_margin_top"
                    android:layout_marginBottom="@dimen/textView_sign_up_margin_bottom"
                    android:text="@string/textView_not_registered_description"
                    android:textSize="@dimen/textView_sign_up_text_size" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_sign_up_margin_left"
                    android:layout_marginTop="@dimen/textView_sign_up_margin_top"
                    android:layout_marginBottom="@dimen/textView_sign_up_margin_bottom"
                    android:text="@string/textView_sign_up_description"
                    android:textColor="@color/colorTextTvSignUp"
                    android:textSize="@dimen/textView_sign_up_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
