<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainActivityBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.asiantech.intern20summer1.MainActivity">

    <LinearLayout
        android:id="@+id/llTitleMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/linear_layout_title_main_activity_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/tvInternshipDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/text_view_internship_summer_2020_description_margin_left"
            android:text="@string/text_view_internship_summer_2020_description"
            android:textSize="@dimen/text_view_internship_summer_2020_description_text_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scroll_view_main_activity_margin"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/tvBottomDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTitleMainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnWeek3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_week_3_description"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWeek4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_week_description_activity_main_margin_top"
                android:text="@string/button_week_4_description"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWeek5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_week_description_activity_main_margin_top"
                android:text="@string/button_week_5_description"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWeek6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_week_description_activity_main_margin_top"
                android:text="@string/button_week_6_description"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnWeek7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_week_description_activity_main_margin_top"
                android:text="@string/button_week_7_description"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvBottomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_view_bottom_description_main_activity_margin_bottom"
        android:text="@string/text_view_bottom_description_main_activity"
        android:textSize="@dimen/text_view_bottom_description_main_activity_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
