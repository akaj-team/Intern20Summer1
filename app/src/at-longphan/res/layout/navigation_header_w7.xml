<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_header_w7_height"
    android:background="@color/colorContainerHeaderW7Background"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imgBackHeader"
        android:layout_width="@dimen/image_view_back_header_w7_size"
        android:layout_height="@dimen/image_view_back_header_w7_size"
        android:layout_marginLeft="@dimen/image_view_back_header_w7_margin_left"
        android:layout_marginTop="@dimen/image_view_back_header_w7_margin_top"
        android:src="@drawable/ic_arrow_back_ios_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/linear_layout_content_header_w7_margin_horizontal"
        android:layout_marginTop="@dimen/linear_layout_content_header_w7_margin_top"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarHeaderWeek7"
            android:layout_width="@dimen/image_view_avatar_header_w7_size"
            android:layout_height="@dimen/image_view_avatar_header_w7_size"
            android:layout_marginRight="@dimen/image_view_avatar_header_w7_margin_right"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvUserNameWeek7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_view_username_header_w7_height"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_view_username_header_w7_text_size"
                tools:text="Doan Bien Q." />

            <TextView
                android:id="@+id/tvUniversityWeek7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUserNameWeek7"
                android:gravity="left|top"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_view_other_header_w7_text_size"
                tools:text="Ho Chi Minh City University of Technology" />

            <TextView
                android:id="@+id/tvHomeTownWeek7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUniversityWeek7"
                android:gravity="left|top"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_view_other_header_w7_text_size"
                tools:text="Ho Chi Minh City" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
