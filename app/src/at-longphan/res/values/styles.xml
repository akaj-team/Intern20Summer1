<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_view_margin_left</item>
        <item name="android:layout_marginTop">@dimen/text_view_margin_top</item>
        <item name="android:textSize">@dimen/text_view_text_size</item>
    </style>

    <style name="EditTextSignUpDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_layout_height</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_top</item>
        <item name="android:background">@drawable/selector_edit_text</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_left</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_right</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
    </style>

    <style name="ImageViewCheck">
        <item name="android:layout_marginTop">@dimen/image_view_check_margin_top</item>
        <item name="android:layout_marginRight">@dimen/image_view_check_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/image_view_check_margin_bottom</item>
        <item name="android:paddingTop">@dimen/image_view_check_padding_top</item>
        <item name="android:paddingBottom">@dimen/image_view_check_padding_bottom</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="AppThemeWeek4" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWeek4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWeek4</item>
        <item name="colorAccent">@color/colorAccentWeek4</item>
    </style>

    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen_week4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashscreenThemeWeek7" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen_week7</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="EditTextDescriptionMusicApp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_register_margin_bottom</item>
        <item name="android:hint">@string/edit_text_register_hint</item>
        <item name="android:textSize">@dimen/edit_text_register_text_size</item>
    </style>

    <style name="TextViewDescriptionMusicApp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_view_register_description_margin_left</item>
        <item name="android:textSize">@dimen/text_view_register_description_text_size</item>
    </style>
</resources>
