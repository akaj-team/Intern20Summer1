<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/textView_margin_left</item>
        <item name="android:layout_marginTop">@dimen/textView_margin_top</item>
        <item name="android:textSize">@dimen/textView_text_size</item>
    </style>

    <style name="EditTextSignUpDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/editText_margin_top</item>
        <item name="android:background">@drawable/selector_edt</item>
        <item name="android:paddingLeft">@dimen/editText_padding_left</item>
        <item name="android:paddingRight">@dimen/editText_padding_right</item>
        <item name="android:textSize">@dimen/editText_text_size</item>
    </style>

    <style name="ImageViewCheck">
        <item name="android:layout_marginTop">@dimen/check_imageView_margin_top</item>
        <item name="android:layout_marginRight">@dimen/check_imageView_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/check_imageView_margin_bottom</item>
        <item name="android:paddingTop">@dimen/check_imageView_padding_top</item>
        <item name="android:paddingBottom">@dimen/check_imageView_padding_bottom</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
