<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle.SignUp.w10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="30sp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar.SignUp.w10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvTitle.SignUp.w10"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_avatar_default" />

    <EditText
        android:id="@+id/edtUserName.SignUp.w10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_editext_height"
        android:layout_below="@id/imgAvatar.SignUp.w10"
        android:layout_marginLeft="@dimen/w10_edit_text_margin_left_right"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:layout_marginRight="@dimen/w10_edit_text_margin_left_right"
        android:background="@drawable/w10_bg_editext"
        android:hint="user name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingLeft="@dimen/w10_edit_text_padding_left_right"
        android:paddingRight="@dimen/w10_edit_text_padding_left_right"
        android:textSize="@dimen/w10_editext_text_size" />

    <EditText
        android:id="@+id/edtPassword.SignUp.w10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_editext_height"
        android:layout_below="@id/edtUserName.SignUp.w10"
        android:layout_marginLeft="@dimen/w10_edit_text_margin_left_right"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:layout_marginRight="@dimen/w10_edit_text_margin_left_right"
        android:background="@drawable/w10_bg_editext"
        android:hint="password"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingLeft="@dimen/w10_edit_text_padding_left_right"
        android:paddingRight="@dimen/w10_edit_text_padding_left_right"
        android:textSize="@dimen/w10_editext_text_size" />

    <EditText
        android:id="@+id/edtRePass.SignUp.w10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_editext_height"
        android:layout_below="@id/edtPassword.SignUp.w10"
        android:layout_marginLeft="@dimen/w10_edit_text_margin_left_right"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:layout_marginRight="@dimen/w10_edit_text_margin_left_right"
        android:background="@drawable/w10_bg_editext"
        android:hint="rewrite password"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingLeft="@dimen/w10_edit_text_padding_left_right"
        android:paddingRight="@dimen/w10_edit_text_padding_left_right"
        android:textSize="@dimen/w10_editext_text_size" />

    <Button
        android:id="@+id/btnRegister.SignUp.w10"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/w10_edit_text_margin_left_right"
        android:layout_marginRight="@dimen/w10_edit_text_margin_left_right"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_w7_button_register_disable"
        android:text="Register"
        android:textColor="@color/black" />
</RelativeLayout>