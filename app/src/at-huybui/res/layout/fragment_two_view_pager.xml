<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/w6_card_view_margin_left_right"
        android:layout_marginRight="@dimen/w6_card_view_margin_left_right"
        android:layout_marginTop="@dimen/w6_card_view_margin_top"
        android:gravity="center"
        android:background="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgTopFlat"
                android:layout_width="@dimen/w6_flat_width"
                android:layout_height="@dimen/w6_flat_height"
                android:src="@drawable/img_australia_flat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_top_flat_margin_top" />

            <TextView
                android:id="@+id/tvNameEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgTopFlat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_top_text_margin_top"
                tools:text="Kangaroo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/w6_name_text_size" />
            <ImageView
                android:id="@+id/imgCenterMain"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/w6_fragment_two_margin_vertical"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameEnglish"
                tools:src="@drawable/img_kangaroo"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tvNameFrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCenterMain"
                android:layout_centerHorizontal="true"
                tools:text="Le Kangourou"
                android:textColor="@android:color/black"
                android:textSize="@dimen/w6_name_text_size" />

            <ImageView
                android:id="@+id/imgBottomFlat"
                android:layout_width="@dimen/w6_flat_width"
                android:layout_height="@dimen/w6_flat_height"
                android:src="@drawable/img_france_flat"
                android:layout_below="@+id/tvNameFrance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_top_text_margin_top" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
