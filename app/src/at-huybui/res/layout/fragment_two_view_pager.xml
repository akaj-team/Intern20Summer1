<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@android:color/white"
        android:gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgTopFlat"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/img_australia_flat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_fragment_two_margin_vertical"/>

            <TextView
                android:id="@+id/tvNameEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgTopFlat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_fragment_two_margin_vertical"
                android:text="Kangaroo"
                android:textSize="30dp" />
            <ImageView
                android:id="@+id/imgCenterMain"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/w6_fragment_two_margin_vertical"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameEnglish"
                android:src="@drawable/img_kangaroo"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tvNameFrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCenterMain"
                android:layout_centerHorizontal="true"
                android:text="Le Kangourou"
                android:textSize="30dp" />
            <ImageView
                android:id="@+id/imgBottomFlat"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/img_france_flat"
                android:layout_below="@+id/tvNameFrance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/w6_fragment_two_margin_vertical"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
