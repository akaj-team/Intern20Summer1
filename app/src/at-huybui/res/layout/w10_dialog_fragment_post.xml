<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/w10_post_fragment_icon_back_size"
            android:layout_height="@dimen/w10_post_fragment_icon_back_size"
            android:padding="@dimen/w10_post_fragment_icon_back_padding"
            android:src="@drawable/w10_ic_close" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/w10_new_post"
            android:textSize="@dimen/w10_post_fragment_title_size" />

        <ImageView
            android:id="@+id/btnPost"
            android:layout_width="@dimen/w10_post_fragment_icon_back_size"
            android:layout_height="@dimen/w10_post_fragment_icon_back_size"
            android:layout_alignParentRight="true"
            android:padding="@dimen/w10_post_fragment_icon_back_padding"
            android:src="@drawable/w10_ic_tick" />

    </RelativeLayout>

    <ScrollView
        android:layout_marginBottom="20dp"
        android:layout_below="@id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/w10_post_image_margin"
                android:src="@drawable/img_avatar_default" />

            <EditText
                android:id="@+id/edtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/w10_enter_content"
                android:layout_margin="@dimen/w10_post_edit_text_margin"
                android:background="@drawable/w10_bg_editext"
                android:maxLength="@integer/w10_max_length_content"
                android:padding="@dimen/w10_post_edit_text_padding"
                android:textSize="@dimen/w10_post_edit_text_size" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/w10_progress_bar_size"
        android:layout_height="@dimen/w10_progress_bar_size"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
</RelativeLayout>
