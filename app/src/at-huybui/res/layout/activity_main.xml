<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.95"
        android:paddingTop="30dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/RelativeEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvEmailTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="10dp"
            android:text="@string/email_title"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvEmailTile"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_email"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imgTickEmail"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/edtEmail"
            android:layout_alignEnd="@+id/edtEmail"
            android:layout_alignRight="@+id/edtEmail"
            android:layout_alignBottom="@+id/edtEmail"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativePass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvPassTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="10dp"
            android:text="@string/pass_title"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvPassTile"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imgTickPass"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/edtPass"
            android:layout_alignEnd="@+id/edtPass"
            android:layout_alignRight="@+id/edtPass"
            android:layout_alignBottom="@+id/edtPass"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeRePass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvRePassTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="10dp"
            android:text="@string/repass_title"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/edtRePass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvRePassTile"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_password"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/imgTickRepass"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/edtRePass"
            android:layout_alignEnd="@+id/edtRePass"
            android:layout_alignRight="@+id/edtRePass"
            android:layout_alignBottom="@+id/edtRePass"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1.09"
        android:gravity="center"
        android:text="@string/link_btn_title"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.11"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_facebook" />

        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_twitter" />

        <ImageView
            android:id="@+id/imgGoogle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_google_plus" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="68dp"
        android:layout_weight="1.08"
        android:background="@drawable/custom_button"
        android:text="@string/signup"
        android:textColor="#FAF4F1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.08"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:paddingBottom="10dp"
            android:text="@string/not_register"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvSigup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="bottom|left"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:text="@string/signup_edt"
            android:textColor="#0D2A93"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
