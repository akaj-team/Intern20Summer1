<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.95"
        android:paddingTop="30dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/RelativeEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvEmailTile"
            style="@style/text_title_edit_text"
            android:text="@string/email_title" />

        <EditText
            android:id="@+id/edtEmail"
            style="@style/edit_text"
            android:layout_below="@+id/tvEmailTile"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress" />

        <ImageView
            android:id="@+id/imgTickEmail"
            style="@style/icon_tick_error"
            android:layout_alignTop="@+id/edtEmail"
            android:layout_alignEnd="@+id/edtEmail"
            android:layout_alignRight="@+id/edtEmail"
            android:layout_alignBottom="@+id/edtEmail"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativePass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvPassTile"
            style="@style/text_title_edit_text"
            android:text="@string/pass_title" />

        <EditText
            android:id="@+id/edtPass"
            style="@style/edit_text"
            android:layout_below="@+id/tvPassTile"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_password"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imgTickPass"
            style="@style/icon_tick_error"
            android:layout_alignTop="@+id/edtPass"
            android:layout_alignEnd="@+id/edtPass"
            android:layout_alignRight="@+id/edtPass"
            android:layout_alignBottom="@+id/edtPass"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeRePass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvRePassTile"
            style="@style/text_title_edit_text"
            android:text="@string/repass_title" />

        <EditText
            android:id="@+id/edtRePass"
            style="@style/edit_text"
            android:layout_below="@+id/tvRePassTile"
            android:background="@drawable/custom_select_edittext"
            android:hint="@string/edittext_password"
            android:importantForAutofill="no"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imgTickRepass"
            style="@style/icon_tick_error"
            android:layout_alignTop="@+id/edtRePass"
            android:layout_alignEnd="@+id/edtRePass"
            android:layout_alignRight="@+id/edtRePass"
            android:layout_alignBottom="@+id/edtRePass"
            android:src="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1.09"
        android:gravity="center"
        android:text="@string/link_btn_title"
        android:textSize="@dimen/text_another" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.11"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFacebook"
            style="@style/image_button"
            android:src="@drawable/btn_facebook" />

        <ImageView
            android:id="@+id/imgTwitter"
            style="@style/image_button"
            android:src="@drawable/btn_twitter" />

        <ImageView
            android:id="@+id/imgGoogle"
            style="@style/image_button"
            android:src="@drawable/btn_google_plus" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSignup"
        style="@style/button"
        android:text="@string/signup" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1.08"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:text="@string/not_register"
            android:textSize="@dimen/text_another" />

        <TextView
            android:id="@+id/tvSigup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:paddingLeft="2dp"
            android:text="@string/signup_edt"
            android:textColor="@color/text_sign_up"
            android:textSize="@dimen/text_another" />
    </LinearLayout>
</LinearLayout>
