<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/w7_card_view_radius"
    app:cardElevation="@dimen/w7_card_view_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w7_dialog_height">
        <ImageView
            android:id="@+id/imgBackIconDialog"
            android:layout_width="@dimen/w7_dialog_back_icon_size"
            android:layout_height="@dimen/w7_dialog_back_icon_size"
            android:layout_margin="@dimen/w7_dialog_back_icon_margin"
            android:background="@drawable/icon_back_dialog" />

        <TextView
            android:id="@+id/tvTitleDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/w7_dialog_title_text_margin_top"
            android:text="@string/w7_trong_cay"
            android:textSize="@dimen/w7_dialog_title_text_size" />

        <Spinner
            android:id="@+id/spinnerTree"
            android:layout_below="@id/tvTitleDialog"
            android:layout_marginLeft="@dimen/w7_register_margin_left_right"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/w7_register_margin_left_right"
            android:background="@drawable/bg_w7_select_spinner"
            android:layout_height="@dimen/w7_register_edit_text_height"
            android:overScrollMode="never" />

        <Button
            android:id="@+id/btnOkDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/w7_dialog_edit_text_margin_left_right"
            android:layout_marginRight="@dimen/w7_dialog_edit_text_margin_left_right"
            android:layout_marginBottom="@dimen/w7_dialog_button_margin_bottom"
            android:background="@color/w7_button_disable"
            android:text="@string/w7_ok" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
