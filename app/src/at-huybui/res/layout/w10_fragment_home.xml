<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_home_tool_bar_height">

        <ImageView
            android:id="@+id/imgHome"
            android:padding="@dimen/w10_home_icon_menu_padding"
            android:layout_width="@dimen/w10_home_tool_bar_height"
            android:src="@drawable/w10_ic_menu"
            android:layout_height="@dimen/w10_home_tool_bar_height" />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/w10_home"
            android:textSize="@dimen/w10_home_title_size"/>

        <ImageView
            android:id="@+id/imgAddPost"
            android:padding="@dimen/w10_home_icon_add_padding"
            android:layout_width="@dimen/w10_home_tool_bar_height"
            android:layout_alignParentRight="true"
            android:src="@drawable/w10_ic_add"
            android:layout_height="@dimen/w10_home_tool_bar_height" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
