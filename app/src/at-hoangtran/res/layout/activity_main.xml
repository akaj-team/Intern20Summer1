<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="11dp"
        android:text="@string/emailID"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/boxID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="22dp"
            android:paddingLeft="22dp"
            android:autofillHints="Email"
            android:hint="@string/hintEmail"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittextshape"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/imgEmailTick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_tick" />

        <ImageView
            android:id="@+id/imgEmailError"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_error" />
    </RelativeLayout>

    <TextView
        android:id="@+id/passText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="11dp"
        android:text="@string/password"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/boxPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/edittextshape">

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:autofillHints="Password"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:background="@null"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/imgPassTick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_tick" />

        <ImageView
            android:id="@+id/imgPassError"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_error" />
    </RelativeLayout>

    <TextView
        android:id="@+id/retypePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="11dp"
        android:text="@string/retype"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/boxRetype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/edittextshape">

        <EditText
            android:id="@+id/edtRetype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:autofillHints="Email"
            android:hint="@string/password"
            android:background="@null"
            android:inputType="textEmailAddress"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/imgRetypeTick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_tick" />

        <ImageView
            android:id="@+id/imgRetypeError"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/icon_error" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="31dp"
        android:text="@string/link" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/btn_facebook" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/btn_twitter" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@mipmap/btn_google_plus" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp"
        android:background="@drawable/shapebutton"
        android:text="@string/signUP"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="5dp"
            android:text="@string/not" />

        <TextView
            android:id="@+id/hyper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign" />
    </LinearLayout>

</LinearLayout>