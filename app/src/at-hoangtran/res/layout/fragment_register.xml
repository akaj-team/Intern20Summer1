<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/llRegisterMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_text_view_margin_left"
            android:layout_marginTop="@dimen/register_text_view_margin_top"
            android:layout_marginBottom="@dimen/register_text_view_margin_bottom"
            android:text="@string/register"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/register_text_view_text_size" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/user_image_view_size"
            android:layout_height="@dimen/user_image_view_size"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_linear_layout_margin_left"
            android:layout_marginTop="@dimen/register_linear_layout_margin_top"
            android:layout_marginRight="@dimen/register_linear_layout_margin_right"
            android:layout_marginBottom="@dimen/register_linear_layout_margin_bottom"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginBottom="@dimen/register_edit_text_margin_bottom"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_register_garden"
                android:hint="@string/user_name"
                android:inputType="text"
                android:paddingLeft="@dimen/register_edit_text_padding_left" />

            <EditText
                android:id="@+id/edt_university"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginBottom="@dimen/register_edit_text_margin_bottom"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_register_garden"
                android:hint="@string/university"
                android:inputType="text"
                android:paddingLeft="@dimen/register_edit_text_padding_left" />

            <EditText
                android:id="@+id/edt_home_town"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:autofillHints=""
                android:background="@drawable/bg_edit_text_register_garden"
                android:hint="@string/home"
                android:inputType="text"
                android:paddingLeft="@dimen/register_edit_text_padding_left" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:background="@drawable/bg_button"
            android:enabled="false"
            android:text="@string/next"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</ScrollView>
