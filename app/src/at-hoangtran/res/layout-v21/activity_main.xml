<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:layout_marginBottom="@dimen/logo_margin_bot"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/description_margin_left"
            android:layout_marginBottom="@dimen/description_margin_bot"
            android:text="@string/email_ID_description" />

        <RelativeLayout
            android:id="@+id/rlEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rl_layout_height"
            android:layout_marginLeft="@dimen/rl_layout_margin_left"
            android:layout_marginRight="@dimen/rl_layout_margin_right"
            android:background="@drawable/bg_edit_text">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:autofillHints="Email"
                android:background="@null"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress" />

            <ImageView
                android:id="@+id/imgEmailTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/imageView_margin_right"
                android:src="@mipmap/icon_tick"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/passText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/description_margin_left"
            android:layout_marginBottom="@dimen/description_margin_bot"
            android:text="@string/password" />

        <RelativeLayout
            android:id="@+id/rlPass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rl_layout_height"
            android:layout_marginLeft="@dimen/rl_layout_margin_left"
            android:layout_marginRight="@dimen/rl_layout_margin_right"
            android:background="@drawable/bg_edit_text">

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:autofillHints="@string/pass_hint"
                android:background="@null"
                android:hint="@string/pass_hint"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/imgPassTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/imageView_margin_right"
                android:src="@mipmap/icon_tick"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/retypePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/description_margin_left"
            android:layout_marginBottom="@dimen/description_margin_bot"
            android:text="@string/retype" />

        <RelativeLayout
            android:id="@+id/rlRetype"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rl_layout_height"
            android:layout_marginLeft="@dimen/rl_layout_margin_left"
            android:layout_marginRight="@dimen/rl_layout_margin_right"
            android:background="@drawable/bg_edit_text">

            <EditText
                android:id="@+id/edtRetype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/editText_margin_left"
                android:layout_marginRight="@dimen/editText_margin_right"
                android:autofillHints="@string/password"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/imgRetypeTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/imageView_margin_right"
                android:src="@mipmap/icon_tick"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/tv_social_margin_top"
            android:layout_marginBottom="@dimen/tv_social_margin_bot"
            android:text="@string/link" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/imageView_social_margin_bot">

            <ImageView
                android:id="@+id/imgFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fb_margin_right"
                android:src="@mipmap/btn_facebook" />

            <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/twitter_margin_right"
                android:src="@mipmap/btn_twitter" />

            <ImageView
                android:id="@+id/imgGGPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_google_plus" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/button_margin_left"
            android:layout_marginRight="@dimen/button_margin_right"
            android:background="@drawable/button_shape"
            android:text="@string/signUP"
            android:textColor="@color/White" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_layout_margin_top"
            android:layout_marginBottom="@dimen/register_layout_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/register_tv_padding_right"
                android:text="@string/not" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sign"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
