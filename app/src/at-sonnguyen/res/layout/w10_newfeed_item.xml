<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/w10_relative_margin_horizontal"
    android:layout_marginTop="@dimen/w10_relative_margin_top"
    android:layout_marginRight="@dimen/w10_relative_margin_horizontal">

    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="@dimen/w10_delete_image_view_size"
        android:layout_height="@dimen/w10_delete_image_view_size"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/w10_delete_post_image_description" />

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_image_item_height"
        android:contentDescription="@string/w10_picture_item_description"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/llReaction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_linear_layout_reaction_height"
        android:layout_below="@id/imgItem"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="@dimen/w10_icon_size"
            android:layout_height="@dimen/w10_icon_size"
            android:contentDescription="@string/w10_like_image_view_description"
            android:src="@drawable/ic_heart" />

        <ImageView
            android:layout_width="@dimen/w10_icon_size"
            android:layout_height="@dimen/w10_icon_size"
            android:layout_marginStart="@dimen/w10_comment_image_view_margin_left"
            android:layout_marginLeft="@dimen/w10_comment_image_view_margin_left"
            android:contentDescription="@string/w10_comment_image_view_description"
            android:src="@drawable/ic_comment" />

        <ImageView
            android:layout_width="@dimen/w10_icon_size"
            android:layout_height="@dimen/w10_icon_size"
            android:layout_marginStart="@dimen/w10_send_image_view_margin_left"
            android:layout_marginLeft="@dimen/w10_send_image_view_margin_left"
            android:contentDescription="@string/send_image_view_description"
            android:src="@drawable/ic_send" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_line_text_view_height"
        android:layout_below="@id/llReaction"
        android:layout_marginTop="@dimen/w10_divider_decoration_text_view_margin_top"
        android:background="@drawable/bg_line_text_view" />

    <TextView
        android:id="@+id/tvLikeCount"
        android:layout_width="@dimen/w10_like_number_text_view_width"
        android:layout_height="@dimen/w10_like_number_text_view_height"
        android:layout_below="@id/llReaction"
        android:layout_marginTop="@dimen/w10_like_number_text_view_margin_top"
        android:gravity="center"
        android:text="@string/w10_item_number_of_like"
        android:textSize="@dimen/w10_text_view_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCreatedTime"
        android:textSize="@dimen/w10_text_view_text_size"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/llReaction"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLikeCount"
        android:layout_marginBottom="@dimen/w10_description_text_view_margin_top" />

</RelativeLayout>
