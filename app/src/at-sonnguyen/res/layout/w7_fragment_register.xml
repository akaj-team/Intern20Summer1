<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/w7_register_fragment_margin_left"
    android:layout_marginRight="@dimen/w7_register_fragment_margin_right"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/w7_register_fragment_margin_left"
    android:layout_marginEnd="@dimen/w7_register_fragment_margin_right">
    <TextView
        android:layout_width="@dimen/w7_register_fragment_title_width"
        android:text="@string/w7_register_fragment_title_text"
        android:textSize="@dimen/w7_register_fragment_title_text_view_text_size"
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/w7_register_fragment_title_text_view_margin_top"
        android:layout_height="@dimen/w7_register_fragment_title_text_view_height"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/w7_register_fragment_avatar_image_width"
        android:id="@+id/imgAvatarRegister"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="@dimen/w7_register_fragment_avatar_image_border_width"
        app:civ_border_color="@color/colorWeek7CircleImageViewBorder"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/w7_register_fragment_avatar_image_margin_top"
        android:layout_height="@dimen/w7_register_fragment_avatar_image_height"/>
    <EditText
        android:hint="@string/w7_register_fragment_user_name_text_view_hint"
        android:id="@+id/edtUsername"
        android:layout_below="@id/imgAvatarRegister"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/w7_register_fragment_username_text_view_margin_top"
        android:layout_height="@dimen/w7_register_fragment_edit_text_height"
        android:autofillHints="@string/w7_register_fragment_user_name_text_view_hint"
        android:inputType="text" />
    <EditText
        android:layout_width="match_parent"
        android:layout_below="@id/edtUsername"
        android:layout_marginTop="@dimen/w7_register_fragment_university_edit_text_margin_top"
        android:id="@+id/edtUniversity"
        android:hint="@string/w7_register_fragment_university_edit_text_hint"
        android:layout_height="@dimen/w7_register_fragment_edit_text_height"
        android:autofillHints="@string/w7_register_fragment_university_edit_text_hint"
        android:inputType="text" />
    <EditText
        android:layout_below="@id/edtUniversity"
        android:layout_marginTop="@dimen/w7_register_fragment_home_town_edit_text_margin_top"
        android:hint="@string/w7_register_fragment_home_town_hint"
        android:id="@+id/edtHomeTown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w7_register_fragment_edit_text_height"
        android:autofillHints="@string/w7_register_fragment_home_town_hint"
        android:inputType="text" />
    <Button
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/w7_register_fragment_next_button_margin_bottom"
        android:text="@string/w7_register_fragment_next_button_text"
        android:id="@+id/btnNext"
        android:enabled="false"
        android:layout_height="@dimen/w7_register_fragment_edit_text_height"/>
</RelativeLayout>
