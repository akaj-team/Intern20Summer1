<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/w10_relative_margin_horizontal"
    android:layout_marginRight="@dimen/w10_relative_margin_horizontal">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/w10_logo_image_view_width"
        android:layout_height="@dimen/w10_logo_image_view_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/w10_logo_login_fragment_margin_top"
        android:contentDescription="@string/w10_logo_image_description"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tvEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_marginStart="@dimen/w10_text_view_margin_left"
        android:layout_marginLeft="@dimen/w10_text_view_margin_left"
        android:layout_marginTop="@dimen/w10_text_view_margin_top"
        android:text="@string/w10_email_text_view_text"
        android:textSize="@dimen/w10_text_view_text_size" />

    <EditText
        android:id="@+id/edtEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/tvEmailLogin"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:autofillHints="@string/w10_email_text_view_text"
        android:background="@drawable/w10_select_custom_edit_text"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEmailLogin"
        android:layout_marginStart="@dimen/w10_text_view_margin_left"
        android:layout_marginLeft="@dimen/w10_text_view_margin_left"
        android:layout_marginTop="@dimen/w10_text_view_margin_top"
        android:text="@string/w10_password_text_view_text"
        android:textSize="@dimen/w10_text_view_text_size" />

    <EditText
        android:id="@+id/edtPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/tvPasswordLogin"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:autofillHints="@string/w10_password_text_view_text"
        android:background="@drawable/w10_select_custom_edit_text"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/edtPasswordLogin"
        android:layout_marginTop="@dimen/w10_button_margin_top"
        android:background="@drawable/w10_bg_button"
        android:enabled="false"
        android:text="@string/w10_login_fragment_title"
        android:textAllCaps="false"
        android:textSize="@dimen/w10_button_text_size" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:layout_marginRight="@dimen/w12_text_view_register_margin_right"
        android:text="@string/w10_register_text_view_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/w12_text_view_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:layout_toLeftOf="@id/tvRegister"
        android:text="@string/w12_do_you_have_account"
        android:textSize="@dimen/w12_text_view_text_size" />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
</RelativeLayout>
