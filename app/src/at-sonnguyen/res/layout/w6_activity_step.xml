<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerStep"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circleIndicatorStep"
        android:layout_width="@dimen/w6_circle_indicator_width"
        android:layout_height="@dimen/W6_circle_indicator_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/w6_circle_indicator_margin_start"
        android:layout_marginLeft="@dimen/w6_circle_indicator_margin_left"
        android:layout_marginBottom="@dimen/w6_circle_indicator_margin_bottom" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/w6_next_text_view_margin_end"
        android:layout_marginRight="@dimen/w6_next_text_view_margin_right"
        android:layout_marginBottom="@dimen/w6_next_text_view_margin_bottom"
        android:text="@string/w6_next_text_view_next"
        android:textSize="@dimen/w6_text_view_text_size"
        android:textStyle="bold" />
</RelativeLayout>
