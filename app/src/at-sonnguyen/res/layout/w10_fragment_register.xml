<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/w10_relative_margin_horizontal"
    android:layout_marginRight="@dimen/w10_relative_margin_horizontal">

    <ImageView
        android:id="@+id/circleImageLogo"
        android:layout_width="@dimen/w10_logo_image_view_width"
        android:layout_height="@dimen/w10_logo_image_view_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/w10_register_fragment_logo_margin_top"
        android:contentDescription="@string/w10_logo_image_description"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tvEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleImageLogo"
        android:layout_marginStart="@dimen/w10_text_view_margin_left"
        android:layout_marginLeft="@dimen/w10_text_view_margin_left"
        android:layout_marginTop="@dimen/w10_text_view_margin_top"
        android:text="@string/w10_email_text_view_text"
        android:textSize="@dimen/w10_text_view_text_size" />

    <EditText
        android:id="@+id/edtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/tvEmailRegister"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:autofillHints="@string/w10_email_text_view_text"
        android:background="@drawable/w10_select_custom_edit_text"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvFulNameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtEmailRegister"
        android:layout_marginStart="@dimen/w10_text_view_margin_left"
        android:layout_marginLeft="@dimen/w10_text_view_margin_left"
        android:layout_marginTop="@dimen/w10_text_view_margin_top"
        android:text="@string/w10_full_name_text_view_text"
        android:textSize="@dimen/w10_text_view_text_size" />

    <EditText
        android:id="@+id/edtFullNameRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/tvFulNameRegister"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:autofillHints="@string/w10_full_name_text_view_text"
        android:background="@drawable/w10_select_custom_edit_text"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtFullNameRegister"
        android:layout_marginStart="@dimen/w10_text_view_margin_left"
        android:layout_marginLeft="@dimen/w10_text_view_margin_left"
        android:layout_marginTop="@dimen/w10_text_view_margin_top"
        android:text="@string/w10_password_text_view_text" />

    <EditText
        android:id="@+id/edtPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/tvPasswordRegister"
        android:layout_marginTop="@dimen/w10_edit_text_margin_top"
        android:autofillHints="@string/w10_password_text_view_text"
        android:background="@drawable/w10_select_custom_edit_text"
        android:inputType="textPassword"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w10_edit_text_height"
        android:layout_below="@id/edtPasswordRegister"
        android:layout_marginTop="@dimen/w10_button_margin_top"
        android:background="@drawable/w10_bg_button"
        android:text="@string/w10_register_fragment_title_text_view_text"
        android:textAllCaps="false"
        android:textSize="@dimen/w10_button_text_size" />
</RelativeLayout>
