<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w7_navigation_header_height"
    android:background="@color/colorHeader"
    android:orientation="vertical"
    android:padding="@dimen/w7_navigation_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/w7_header_back_image_view_width"
        android:layout_height="@dimen/w7_header_back_image_view_height"
        android:layout_marginLeft="@dimen/w7_header_back_image_view_margin_left"
        android:layout_marginTop="@dimen/w7_header_back_image_view_margin_top"
        android:contentDescription="@string/w7_header_back_image_view_description"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarHeader"
            android:layout_width="@dimen/w7_header_avatar_width"
            android:layout_height="@dimen/w7_header_avatar_height"
            android:layout_marginLeft="@dimen/w7_header_avatar_margin_left"
            android:layout_marginTop="@dimen/w7_header_avatar_margin_top"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorWeek7CircleImageViewBorder"
            app:civ_border_width="@dimen/w7_register_fragment_avatar_image_border_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w7_linear_layout_name_text_view_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="@dimen/w7_header_username_text_view_width"
                android:layout_height="@dimen/w7_header_username_text_view_height"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUniversity"
                android:layout_width="@dimen/w7_header_username_text_view_width"
                android:layout_height="@dimen/w7_header_username_text_view_height" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
