<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorW6BackgroundRelative"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w7_app_bar_layout_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w7_app_bar_layout_height"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgCultivationDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarDetail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="left"
                app:layout_collapseMode="parallax"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/w7_detail_fragment_toolBar_title">

                <ImageView
                    android:id="@+id/imgBackDetail"
                    android:layout_width="@dimen/w7_detail_fragment_back_image_view_width"
                    android:layout_height="@dimen/w7_detail_fragment_back_image_view_height"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWormedPlantDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:textStyle="bold"
                android:textColor="@color/colorTabLayoutSelected"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size" />

            <TextView
                android:id="@+id/tvLackedWaterPlantDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textStyle="bold"
                android:textColor="@color/colorTabLayoutSelected"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size" />

            <TextView
                android:id="@+id/tvComingHarvestPlantDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textStyle="bold"
                android:textColor="@color/colorTabLayoutSelected"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size" />

            <TextView
                android:id="@+id/tvGrownDateDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size_small" />

            <TextView
                android:id="@+id/tvWateringIntervalDateDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size_small" />

            <TextView
                android:id="@+id/tvPlantDescriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/w7_plant_detail_fragment_description_text_view_margin_bottom"
                android:lineSpacingExtra="@dimen/w7_detail_fragment_text_view_line_spacing_extra"
                android:padding="@dimen/w7_detail_fragment_text_view_padding"
                android:textSize="@dimen/w7_detail_fragment_text_view_text_size_small" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <Button
            android:background="@drawable/w7_bg_sprinkle_button"
            android:id="@+id/btnSprinkleDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/w7_detail_fragment_sprinkle_button_text"
            android:layout_marginLeft="@dimen/w7_detail_fragment_button_margin_left_and_right"
            android:layout_marginRight="@dimen/w7_detail_fragment_button_margin_left_and_right" />

        <Button
            android:id="@+id/btnCutDownPlantDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSprinkleDetail"
            android:text="@string/w7_detail_fragment_cut_down_button_text"
            android:layout_marginLeft="@dimen/w7_detail_fragment_button_margin_left_and_right"
            android:textColor="@color/colorRegisterButtonText"
            android:layout_marginTop="@dimen/w7_detail_fragment_button_margin_top"
            android:background="@drawable/w7_bg_register_button"
            android:layout_marginRight="@dimen/w7_detail_fragment_button_margin_left_and_right"
            android:layout_marginBottom="@dimen/w7_detail_fragment_button_margin_bottom" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
