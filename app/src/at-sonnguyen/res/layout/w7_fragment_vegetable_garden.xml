<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/w7_relative_layout_margin_top"
    android:layout_marginLeft="@dimen/w7_relative_layout_margin_left_and_right"
    android:layout_marginRight="@dimen/w7_relative_layout_margin_left_and_right"
    android:layout_height="match_parent">
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvNoPlant"
        android:layout_centerInParent="true"
        android:textSize="@dimen/w7_detail_fragment_text_view_text_size"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/w7_vegetable_garden_fragment_no_plant_text_view_height"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
