<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="32dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="100dp">

    <RelativeLayout
        android:id="@+id/rlVegetable"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/rlContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvVegetableName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgVegetableStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@id/tvVegetableName"
                android:paddingTop="3dp"
                android:src="@drawable/ic_facebook"
                app:civ_border_color="@color/colorBlack" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDateGrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlContainer"
            android:layout_marginLeft="28dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvDateHarvest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDateGrow"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgVegetable"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:paddingTop="3dp"
            android:src="@drawable/img_home"
            app:civ_border_color="@color/colorBlack" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
