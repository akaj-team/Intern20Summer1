<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/avatar_image_view_width"
        android:layout_height="@dimen/avatar_image_view_height"
        android:layout_marginTop="@dimen/avatar_image_view_margin_top"
        android:src="@drawable/img_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/user_name_text_view_margin_left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgAvatar"
        tools:text="sayabaaaa" />

    <ImageView
        android:id="@+id/imgTimeLine"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/avatar_image_view_margin_top"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
        tools:src="@drawable/ic_01" />

    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_marginTop="@dimen/avatar_image_view_margin_top"
        android:src="@drawable/ic_heart_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgTimeLine" />

    <ImageView
        android:id="@+id/imgComment"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_marginLeft="@dimen/image_view_margin_left"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/imgLike"
        app:layout_constraintStart_toEndOf="@+id/imgLike"
        app:layout_constraintTop_toTopOf="@+id/imgLike" />

    <ImageView
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"
        android:layout_marginLeft="@dimen/image_view_margin_left"
        android:src="@drawable/ic_direct"
        app:layout_constraintBottom_toBottomOf="@id/imgLike"
        app:layout_constraintStart_toEndOf="@id/imgComment"
        app:layout_constraintTop_toTopOf="@id/imgLike" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_height"
        android:layout_marginTop="@dimen/avatar_image_view_margin_top"
        android:layout_marginRight="@dimen/image_view_margin_left"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLike" />

    <ImageView
        android:id="@+id/imgHeart"
        android:layout_width="@dimen/heart_bold_icon_width"
        android:layout_height="@dimen/heart_bold_height"
        android:layout_marginLeft="@dimen/heart_bold_image_view_margin_left"
        android:layout_marginTop="@dimen/user_name_text_view_margin_left"
        android:src="@drawable/ic_heart_bold_active"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewLine" />

    <TextView
        android:id="@+id/tvCountLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin_left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeart"
        app:layout_constraintStart_toEndOf="@id/imgHeart"
        app:layout_constraintTop_toTopOf="@id/imgHeart"
        tools:text="12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin_left"
        android:text="like"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgHeart"
        app:layout_constraintStart_toEndOf="@id/tvCountLike"
        app:layout_constraintTop_toTopOf="@id/imgHeart" />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin_left"
        android:layout_marginTop="@dimen/avatar_image_view_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgHeart"
        tools:text="sayabaaaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_name_text_view_margin_left"
        android:layout_marginLeft="@dimen/user_name_text_view_margin_left"
        android:text="akakakakakakakakka"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tvNickName"
        app:layout_constraintStart_toEndOf="@id/tvNickName" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_view_margin_left"
        android:text="kakakakakakakakka"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNickName" />

    <View
        android:id="@+id/viewEndLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_height_4dp"
        android:layout_marginTop="@dimen/image_view_margin_left"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />
</androidx.constraintlayout.widget.ConstraintLayout>
