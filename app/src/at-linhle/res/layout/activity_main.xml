<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/text_view_margin_left_right"
        android:paddingRight="@dimen/text_view_margin_left_right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/logo_image_view_margin_top"
            android:layout_marginBottom="@dimen/logo_image_view_margin_bottom"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom"
            android:text="@string/email_id_text_view_description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:layout_marginBottom="@dimen/relative_layout_margin_bottom">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_edit_view_shape"
                android:hint="@string/email_edit_text_hint"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/edit_text_padding_left" />

            <ImageView
                android:id="@+id/imgEmailTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_tick"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgEmailError"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_error"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom"
            android:text="@string/password_text_view_description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:layout_marginBottom="@dimen/relative_layout_margin_bottom">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_view_shape"
                android:hint="@string/email_edit_text_password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/edit_text_padding_left" />

            <ImageView
                android:id="@+id/imgPasswordTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_tick"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgPasswordError"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_error"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_margin_bottom"
            android:text="@string/retype_password_text_view_description" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height">

            <EditText
                android:id="@+id/edtRetype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_view_shape"
                android:hint="@string/email_edit_text_password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/edit_text_padding_left" />

            <ImageView
                android:id="@+id/imgRetypePassTick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_tick"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgRetypePassError"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/image_view_check_margin_right"
                android:src="@drawable/icon_error"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/media_link_margin_top"
            android:layout_marginBottom="@dimen/media_link_margin_bottom"
            android:text="@string/media_text_view_link" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/buttons_to_sign_up_linear_layout_margin_bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_facebook" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/buttons_to_sign_up_image_view_padding_left"
                android:src="@drawable/btn_twitter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/buttons_to_sign_up_image_view_padding_left"
                android:src="@drawable/btn_google_plus" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/relative_layout_height"
            android:background="@drawable/bg_sign_up_button"
            android:text="@string/sign_up_button_text"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_view_linear_margin_top"
            android:layout_marginBottom="@dimen/text_view_linear_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/sign_up_text_view_padding_right"
                android:text="@string/not_registered_text_view_description" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sign_up_text_view_description"
                android:textColor="@color/colorBlue" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
