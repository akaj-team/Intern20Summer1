<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"/>

    <TextView
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/email_id_text_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="@dimen/lay_out_height_edit_text_dimen"
        android:layout_gravity="center"
        android:background="@drawable/edit_view_shape"
        android:hint="@string/email_hint_edit_view_description"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/padding_left_edit_text_dimen"
        android:paddingRight="@dimen/padding_right_edit_text_dimen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28"/>

    <ImageView
        android:id="@+id/imgEmailTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_tick"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"/>

    <ImageView
        android:id="@+id/imgEmailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_error"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"/>

    <TextView
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/password_text_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="@dimen/lay_out_height_edit_text_dimen"
        android:layout_gravity="center"
        android:background="@drawable/edit_view_shape"
        android:hint="@string/password_hint_edit_view_description"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/padding_left_edit_text_dimen"
        android:paddingRight="@dimen/padding_right_edit_text_dimen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42"/>

    <ImageView
        android:id="@+id/imgPasswordTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_tick"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"/>

    <ImageView
        android:id="@+id/imgPasswordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_error"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"/>

    <TextView
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/retype_password_text_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49"/>

    <EditText
        android:id="@+id/edtRetype"
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="@dimen/lay_out_height_edit_text_dimen"
        android:layout_gravity="center"
        android:background="@drawable/edit_view_shape"
        android:hint="@string/password_hint_edit_view_description"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/padding_left_edit_text_dimen"
        android:paddingRight="@dimen/padding_right_edit_text_dimen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559"/>

    <ImageView
        android:id="@+id/imgRetypePassTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_tick"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559"/>

    <ImageView
        android:id="@+id/imgRetypePassError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/edit_text_status_image_view_dimen"
        android:src="@drawable/icon_error"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/link_media_text_view_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_facebook"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_buttons_to_sign_up_image_view_dimen"
            android:src="@drawable/btn_twitter"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_buttons_to_sign_up_image_view_dimen"
            android:src="@drawable/btn_google_plus"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/lay_out_width_dimen"
        android:layout_height="@dimen/lay_out_height_edit_text_dimen"
        android:layout_gravity="center"
        android:background="@drawable/button_sign_up_shape"
        android:text="@string/sign_up_button_description"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="@dimen/padding_right_sign_up_text_view_dimen"
            android:text="@string/not_registered_text_view_description"/>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/sign_up_text_view_description"
            android:textColor="@color/colorBlue"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
