<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="@dimen/card_view_elevation"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/info_relative_layout_margin_top">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="@dimen/info_circle_image_view_width"
                android:layout_height="@dimen/info_circle_image_view_height"
                android:layout_marginLeft="@dimen/info_circle_image_view_margin_left"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/info_text_view_margin_left"
                android:layout_toRightOf="@+id/imgAvatar"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_image_view_height"
            android:layout_below="@+id/rlInformation"
            android:layout_marginTop="@dimen/image_image_view_margin_top" />

        <LinearLayout
            android:id="@+id/llInteractive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgImage"
            android:layout_marginLeft="@dimen/interactive_linear_layout_margin_left"
            android:layout_marginTop="@dimen/interactive_linear_layout_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/interactive_image_view_margin_right"
                android:src="@drawable/heart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/interactive_image_view_margin_right"
                android:src="@drawable/comment" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/origami" />
        </LinearLayout>

        <View
            android:id="@+id/vLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/llInteractive"
            android:layout_marginLeft="@dimen/line_view_margin_left"
            android:layout_marginTop="@dimen/line_view_margin_top"
            android:layout_marginRight="@dimen/line_view_margin_right"
            android:background="@color/colorGray" />

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vLine"
            android:layout_alignLeft="@+id/vLine"
            android:layout_alignRight="@id/vLine"
            android:layout_marginTop="@dimen/like_text_view_margin_top"
            android:drawableLeft="@drawable/black_heart"
            android:drawablePadding="@dimen/like_text_view_drawable_padding"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLike"
            android:layout_alignLeft="@id/vLine"
            android:layout_alignRight="@+id/vLine"
            android:layout_marginTop="@dimen/comment_text_view_margin_top"
            android:layout_marginBottom="@dimen/comment_text_view_margin_bottom"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>