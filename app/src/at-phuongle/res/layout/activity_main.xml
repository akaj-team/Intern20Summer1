<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/logo_image_margin_top"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/input_linear_layout_margin_top"
            android:orientation="vertical"
            android:weightSum="9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLogo">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/email_tvEmail_text_view" />

            <RelativeLayout
                android:id="@+id/containerEmailField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_margin_top"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="@dimen/edt_width"
                    android:layout_height="@dimen/edt_height"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_border_normal"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/email_edt_padding_left"
                    tools:ignore="LabelFor" />

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="@dimen/icon_image_width"
                    android:layout_height="@dimen/icon_image_height"
                    android:layout_alignRight="@id/edtEmail"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/icon_image_margin_right" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pass_text_view_margin_top"
                android:layout_weight="1"
                android:text="@string/pass_tvPass_text_view" />

            <RelativeLayout
                android:id="@+id/containerPassField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_margin_top"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="@dimen/edt_width"
                    android:layout_height="@dimen/edt_height"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_border_normal"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/pass_edt_padding_left"
                    tools:ignore="LabelFor" />

                <ImageView
                    android:id="@+id/imgPass"
                    android:layout_width="@dimen/icon_image_width"
                    android:layout_height="@dimen/icon_image_height"
                    android:layout_alignRight="@id/edtPass"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/icon_image_width" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvPass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pass2_text_view_margin_top"
                android:layout_weight="1"
                android:text="@string/pass2_tvPass2_text_view" />

            <RelativeLayout
                android:id="@+id/containerPass2Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/container_margin_top"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/edtPass2"
                    android:layout_width="@dimen/edt_width"
                    android:layout_height="@dimen/edt_height"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_border_normal"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/pass2_edt_padding_left"
                    tools:ignore="LabelFor" />

                <ImageView
                    android:id="@+id/imgPass2"
                    android:layout_width="@dimen/icon_image_width"
                    android:layout_height="@dimen/icon_image_height"
                    android:layout_alignRight="@id/edtPass2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/icon_image_margin_right" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/link_text_view_margin_top"
            android:text="@string/link_tvLink_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llInput" />

        <LinearLayout
            android:id="@+id/llLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/link_linear_layout_margin_top"
            android:weightSum="3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLink">

            <ImageButton
                android:id="@+id/imgBtnFb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/link_image_btn_margin_right"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/btn_facebook" />

            <ImageButton
                android:id="@+id/imgBtnGp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/link_image_btn_margin_right"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/btn_google_plus" />

            <ImageButton
                android:id="@+id/imgBtnTw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/btn_twitter" />
        </LinearLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="@dimen/btn_signUp_width"
            android:layout_height="@dimen/btn_signUp_height"
            android:layout_marginTop="@dimen/sign_up_btn_margin_top"
            android:background="@drawable/button_sign_up"
            android:onClick="onSignUpBtn"
            android:text="@string/signUp_btn_button"
            android:textColor="@color/colorTextBtnSignUp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llLink" />

        <LinearLayout
            android:id="@+id/llSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_up_linear_layout_margin_top"
            android:layout_marginBottom="@dimen/sign_up_linear_layout_margin_bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn">

            <TextView
                android:id="@+id/tvNotReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signUp_tvNotReg_text_view" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:onClick="onSignUp"
                android:text="@string/signUp_tvSignUp_text_view"
                android:textColor="@color/colorTvSignUp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>