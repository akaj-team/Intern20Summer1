<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_right">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circleImageAvatar"
                android:layout_width="@dimen/circle_image_view_width_height"
                android:layout_height="@dimen/circle_image_view_width_height"
                android:src="@drawable/bridge"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="2dp"
                tools:ignore="RedundantNamespace" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/item_layout_margin_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_view_center_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/bridge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_layout_margin_left">

            <ImageView
                android:id="@+id/imgIconHeart"
                android:layout_width="@dimen/image_view_width_height"
                android:layout_height="@dimen/image_view_width_height"
                android:src="@drawable/ic_heart_transparent" />

            <ImageView
                android:layout_width="@dimen/image_view_width_height"
                android:layout_height="@dimen/image_view_width_height"
                android:layout_marginLeft="@dimen/image_view_messenger_margin_left_right"
                android:layout_marginRight="@dimen/image_view_messenger_margin_left_right"
                android:src="@drawable/ic_messenger" />

            <ImageView
                android:layout_width="@dimen/image_view_width_height"
                android:layout_height="@dimen/image_view_width_height"
                android:src="@drawable/ic_plane" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_marginLeft="@dimen/item_layout_margin_left"
            android:layout_marginTop="@dimen/view_margin_top"
            android:layout_marginRight="@dimen/item_layout_margin_left"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvAmountHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_layout_margin_left"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/is_like_text_size"
            android:textStyle="bold"
            tools:text="ðŸ–¤  12k likes" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_layout_margin_left"
            android:textColor="@color/colorBlackGray"
            android:textSize="@dimen/text_size"
            tools:text="@string/name_text_view_description_text" />

        <TextView
            android:id="@+id/tvInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_layout_margin_left"
            android:layout_marginBottom="@dimen/text_view_information_margin_bottom"
            android:textColor="@color/colorBlackGray"
            android:textSize="@dimen/text_size"
            android:textStyle="bold|italic"
            tools:text="@string/information_description_text" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
