<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_353dp"
    android:layout_height="@dimen/height_470dp"
    android:layout_marginLeft="@dimen/margin_32dp"
    android:layout_marginTop="@dimen/margin_90dp"
    android:layout_marginRight="@dimen/margin_26dp"
    android:background="@drawable/bg_card_view_radius">

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="@dimen/margin_top_20dp"
        android:layout_height="@dimen/margin_top_20dp"
        android:layout_marginLeft="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_26dp"
        android:background="@drawable/ic_baseline_close_24" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_14dp"
        android:text="@string/dialog_fragment"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/margin_32dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/bg_spinner"
        android:padding="@dimen/margin_top_5dp">

        <Spinner
            android:id="@+id/spnDialog"
            android:layout_width="@dimen/layout_width_320dp"
            android:layout_height="@dimen/layout_height_52dp"
            android:spinnerMode="dropdown"
            app:ms_hint_color="@color/colorBlack"
            app:ms_text_color="@color/colorBlack" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnOk"
        android:layout_width="@dimen/layout_width_320dp"
        android:layout_height="@dimen/layout_height_52dp"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_290"
        android:layout_marginBottom="@dimen/margin_35dp"
        android:background="@drawable/bg_register_button_radius_enable"
        android:text="@string/text_button_ok"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
