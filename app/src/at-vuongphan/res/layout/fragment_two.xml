<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/item_layout_margin"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/relative_margin"
        android:background="@drawable/bg_background_relative_layout_radius">

        <ImageView
            android:id="@+id/imgIconOne"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/item_layout_margin"
            android:src="@drawable/portugal" />

        <TextView
            android:id="@+id/tvNameIconOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgIconOne"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_pager_margin" />

        <ImageView
            android:id="@+id/imgViewCenter"
            android:layout_width="@dimen/image_view_center_width"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_view_center_margin" />

        <TextView
            android:id="@+id/tvNameIconTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/imgIconTwo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_pager_margin" />

        <ImageView
            android:id="@+id/imgIconTwo"
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/item_layout_margin"
            android:src="@drawable/portugal" />
    </RelativeLayout>
</LinearLayout>
