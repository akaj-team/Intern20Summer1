<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrViewRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_80dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16dp"
            android:background="@drawable/bg_button"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_12dp"
            android:paddingRight="@dimen/padding_12dp"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="@string/text_view_create_account"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_38sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_12dp"
                android:layout_marginLeft="@dimen/padding_12dp"
                android:layout_marginTop="@dimen/height_20dp"
                android:drawableLeft="@drawable/user_24"
                android:drawablePadding="@dimen/padding_12dp"
                android:hint="@string/text_view_username"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_18sp"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorRed"
                app:met_singleLineEllipsis="true"
                tools:ignore="RtlHardcoded" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_12dp"
                android:layout_marginLeft="@dimen/padding_12dp"
                android:drawableLeft="@drawable/email_24"
                android:drawablePadding="@dimen/padding_12dp"
                android:hint="@string/email_sign_up_text_view_description_text"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_size_18sp"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorRed"
                app:met_singleLineEllipsis="true"
                tools:ignore="RtlHardcoded" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_12dp"
                android:layout_marginLeft="@dimen/padding_12dp"
                android:drawableLeft="@drawable/password_24"
                android:drawablePadding="@dimen/padding_12dp"
                android:hint="@string/password_text_view_description_text"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_18sp"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/colorRed"
                app:met_singleLineEllipsis="true"
                tools:ignore="RtlHardcoded" />

            <Button
                android:layout_width="@dimen/height_180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_28dp"
                android:background="@drawable/bg_button_login"
                android:enabled="false"
                android:text="@string/register_button_description_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_20dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_an_account"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
